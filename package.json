{
  "name": "electron-vue-isolated-browser",
  "version": "1.0.0",
  "description": "Electron + Vue demo with fully isolated browser environments",
  "main": "src/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer",
    "start": "electron .",
    "test": "node --test"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron": "^31.0.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^9.0.0",
    "vite": "^5.0.0",
    "wait-on": "^8.0.0"
  }
}
